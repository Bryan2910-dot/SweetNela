@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 style="color:white; text-align:center;">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <!-- Formulario -->
        <div class="col-lg-5 col-md-6">
            <section>
                <form id="account" method="post">
                    <h2 style="color:white">Usa tu cuenta registrada para entrar.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3" style="color:white">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>

                    <div>
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </form>
            </section>
        </div>

        <!-- Imagen -->
        <div class="col-lg-5 col-md-6 d-none d-md-flex justify-content-center align-items-center">
            <img src="https://raw.githubusercontent.com/OskarCreate/imagenes/refs/heads/main/sweetnela%20imágen.jpeg" 
                 class="img-fluid rounded-circle" 
                 style="width: 450px; height: 450px; object-fit: cover;" 
                 alt="Imagen de login" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
