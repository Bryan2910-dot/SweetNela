@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}
<link rel="stylesheet" href="~/css/loginBasico.css" asp-append-version="true" />

<div class="login-background">
    <div class="login-container">
        <div class="login-logo">S</div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <input asp-for="Input.Email" class="login-input" placeholder="Username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" class="login-input" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="login-button">Log In</button>
            </div>
        </form>
        <p class="text-center mt-2">
            <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
        </p>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
