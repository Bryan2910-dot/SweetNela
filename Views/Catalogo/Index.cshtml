@{
    ViewData["Title"] = "Catalogo";
}

<!-- Agregar FontAwesome en caso de que no esté en el layout -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<div class="d-flex">



<div class="sidebar vh-100 position-fixed d-flex flex-column" 
     style="width: 250px; background-color:rgb(250, 250, 238); color: #000;">
    
    <div class="d-flex justify-content-center align-items-center p-3">
        <h4 class="m-0">Filtros</h4>
        <i class="fa-solid fa-filter ms-2 p-2" style="color: black; background-color: white; border-radius: 5px;"></i>
    </div>
<hr style="border: 8px solid #ccc; margin: 0;">

    <div class="flex-grow-1" style="max-height: 60vh; overflow-y: auto; padding: 0 10px;">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#saboresSubfiltros" style="color: #000;">Sabores</a>
                <ul id="saboresSubfiltros" class="collapse subfiltros">
                    <li><a href="#" class="d-block py-1 filter-item">Chocolate</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Vainilla</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Fresa</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#tamanosSubfiltros" style="color: #000;">Tamaños</a>
                <ul id="tamanosSubfiltros" class="collapse subfiltros">
                    <li><a href="#" class="d-block py-1 filter-item">Personal</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Mediano</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Grande</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#modelosSubfiltros" style="color: #000;">Modelos</a>
                <ul id="modelosSubfiltros" class="collapse subfiltros">
                    <li><a href="#" class="d-block py-1 filter-item">Hora de Aventura</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Un Show Más</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Clarence</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">One Piece</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">Shawn Mendes</a></li>
                    <li><a href="#" class="d-block py-1 filter-item">1D</a></li>
                </ul>
            </li>
        </ul>
    </div>

</div>



<div class="content flex-grow-1 p-3" style="margin-left: 250px;">
<div class="d-flex justify-content-between align-items-center">
    <h2>Catálogo</h2>
    <i class="fa-solid fa-cart-shopping fs-3"></i>
</div>


    <!-- Contenedor de productos -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Producto 1 -->
<div class="col">
    <div class="card h-100 text-center position-relative overflow-hidden">
        <div class="position-relative">
            <img src="https://thecaketortas.pe/wp-content/uploads/2024/04/torta-one-piece2.png" class="card-img-top" alt="Producto 2">
            <!-- Botón flotante en la imagen -->
            <button class="btn btn-dark btn-sm rounded-circle position-absolute" style="bottom: 0px; right: 0px;">
                <i class="fa-solid fa-plus"></i>
            </button>
        </div>
        <div class="card-body">
            <h5 class="card-title m-0">Producto 3</h5>
        </div>
    </div>
</div>

</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Estilos adicionales -->
<style>
    .filter-item {
        color: #000;
        text-decoration: none;
    }

    .filter-item:hover {
        background-color: #D3D3D3;
        border-radius: 5px;
    }

    .nav-link:hover {
        background-color: #D3D3D3;
        border-radius: 5px;
    }
.subfiltros {
    list-style-type: disc; /* Asegura que haya puntos */
    list-style-position: inside; /* Coloca los puntos dentro del contenido */
    padding-left: 20px; /* Mantiene espacio para los puntos */
    text-align: left; /* Asegura alineación correcta */
}
.subfiltros li {
    display: flex; /* Permite alinear el punto y el enlace en la misma línea */
    align-items: center; /* Alinea verticalmente el punto con el texto */
}

.subfiltros li a {
    text-decoration: none;
    color: #000;
    display: inline-block; /* Asegura que el texto quede alineado con los puntos */
    padding-left: 5px; /* Espacio entre el punto y el texto */
}
</style>
