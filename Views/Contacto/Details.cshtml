@model SweetNela.Models.Contacto

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Detalle de Contacto";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Detalle del Mensaje</h4>
            <a asp-action="Index" class="btn btn-sm btn-light">Volver a la lista</a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombres</dd>

                <dt class="col-sm-3 text-muted">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 text-muted">Teléfono</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3 text-muted">Mensaje</dt>
                <dd class="col-sm-9">
                    <div class="p-2 border rounded bg-light">@Model.Mensaje</div>
                </dd>

                <dt class="col-sm-3 text-muted">Respuesta del Administrador</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.Respuesta))
                    {
                        <div class="p-2 border rounded bg-white">@Model.Respuesta</div>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Aún no se ha respondido este mensaje.</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <div>
                <a asp-action="Chat" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-dark">Abrir Chat</a>
            </div>
            <a asp-action="Index" class="btn btn-sm btn-secondary">Volver</a>
        </div>
    </div>
</div>
