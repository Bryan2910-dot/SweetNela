@model SweetNela.Models.Contacto

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Detalle de Contacto";
    var colorPrincipal = "#6c143c";
}

<!-- Asegúrate de tener Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .text-custom {
        color: @colorPrincipal;
    }

    .btn-custom {
        background-color: @colorPrincipal;
        color: white;
    }

    .btn-custom:hover {
        background-color: #500f2e;
        color: white;
    }

    .border-custom {
        border-color: @colorPrincipal !important;
    }

    .bg-custom {
        background-color: @colorPrincipal;
        color: white;
    }
</style>

<div class="container py-4">
    <div class="card shadow-sm border-custom">
        <div class="card-header bg-custom d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-envelope-paper me-2"></i>Detalle del Mensaje</h4>
            <a asp-action="Index" class="btn btn-sm btn-light">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver a la lista
            </a>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold text-secondary">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombres</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Teléfono</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Mensaje</dt>
                <dd class="col-sm-9">
                    <div class="p-3 border rounded bg-light">@Model.Mensaje</div>
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Respuesta del Administrador</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.Respuesta))
                    {
                        <div class="p-3 border rounded bg-white">@Model.Respuesta</div>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Aún no se ha respondido este mensaje.</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-white border-top border-custom d-flex justify-content-between">
            <a asp-action="Chat" asp-route-id="@Model.Id" class="btn btn-outline-custom border-custom text-custom">
                <i class="bi bi-chat-left-text me-1"></i> Abrir Chat
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-return-left me-1"></i> Volver
            </a>
        </div>
    </div>
</div>
