@model Sweetnela.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<h1>Contacto</h1>

<form method="post" asp-action="RegistrarContacto">
    <div class="form-group mt-2"> 
        <label asp-for="Nombres">Nombres:</label>
        <input type="text" class="form-control" asp-for="Nombres">
        <span class="text-danger" asp-validation-for="Nombres"></span>
    </div>

    <div class="form-group mt-2"> 
        <label asp-for="Email">Correo electrónico:</label>
        <input type="email" class="form-control" asp-for="Email" readonly="@(!string.IsNullOrEmpty(Model.Email))">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group mt-2"> 
        <label asp-for="Telefono">Teléfono:</label>
        <input type="text" class="form-control" asp-for="Telefono" readonly="@(!string.IsNullOrEmpty(Model.Telefono))">
        <span class="text-danger" asp-validation-for="Telefono"></span>
    </div>
    <div class="form-group mt-2"> 
        <label asp-for="Mensaje">¿En qué podemos ayudarte?</label>
        <textarea class="form-control" asp-for="Mensaje"></textarea>
        <span class="text-danger" asp-validation-for="Mensaje"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enviar</button>
</form>

<!-- Display the Respuesta message below the form -->
@if (!string.IsNullOrEmpty(Model.Respuesta))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @Model.Respuesta
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" ></button>
    </div>
}
<br><br><br>
<div class="form-group mt-2"> 
        <p>Nuestro horario de atención es de:</p>
        <p>Lunes a Viernes de 8:00 a 18:00</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

