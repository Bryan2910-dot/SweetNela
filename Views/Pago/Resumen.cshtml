@model IEnumerable<SweetNela.Models.PreOrden>

@{
    ViewData["Title"] = "Resumen del Pago";
    var montoTotal = ViewData["MontoTotal"] != null ? (decimal)ViewData["MontoTotal"] : 0;
}

<h1 class="text-center mb-4">Resumen del Pago</h1>

@if (Model != null && Model.Any())
{
    <div class="d-flex justify-content-center">
        <div class="card shadow-lg" style="width: 70%; background: #fff; border-radius: 18px;">
            <div class="card-body">
                <table class="table table-bordered table-hover mb-0" style="background: #fff; border-radius: 12px;">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Producto?.Name</td>
                                <td>@item.Cantidad</td>
                                <td>S/. @item.Precio</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p class="text-end mt-3 fs-5"><strong>Total: S/. @montoTotal</strong></p>
                <div class="text-center mt-4">
                    <a class="btn btn-primary px-5 py-2 fs-5" asp-controller="Pago" asp-action="Create" asp-route-monto="@montoTotal">Pagar con PayPal</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>No hay productos en el carrito.</p>
}

<style>
    body {
        background: #69153B;
    }
    .card {
        border: none;
    }
    .table th, .table td {
        vertical-align: middle;
    }
</style>