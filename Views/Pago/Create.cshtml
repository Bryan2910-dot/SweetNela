@model SweetNela.Models.Pago
@{
    ViewData["Title"] = "Procesar Pago";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg">
        <div class="card-body">
            <h3 class="card-title text-center mb-4" style="color: #69153B;">Redirigiendo a PayPal</h3>

            <p class="text-center">Serás redirigido a PayPal para completar tu pago.</p>

            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-success text-center">
                    @ViewData["Message"]
                </div>
            }

            <div class="text-center mt-4">
                <a class="btn btn-primary px-5" href="@ViewData["ApprovalUrl"]">Ir a PayPal</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Redirigir automáticamente a PayPal después de 3 segundos
        setTimeout(function () {
            window.location.href = "@ViewData["ApprovalUrl"]";
        }, 3000);
    </script>
}