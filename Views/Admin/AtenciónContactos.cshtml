                            <a class="navbar-brand" href="/Home/Index">
                                <i class="bi bi-house-door"></i><span class="d-none d-sm-inline ms-2">SweetNela</span>
                            </a>
                        </div>
                    </nav>

                    <!-- NAV PRINCIPAL -->
                    <nav class="nav flex-column flex-grow-1">
                        <a class="nav-link text-white" style="white-space:nowrap" href="/Admin/Index">
                            <i class="bi bi-inbox"></i><span class="d-none d-sm-inline ms-2">Atención de Orden</span>
                        </a>
                        <a class="nav-link text-white" style="white-space:nowrap; color: blue !important;" href="/Admin/AtenciónContactos">
