                            <i class="bi bi-person-square"></i><span class="d-none d-sm-inline">@User.Identity?.Name</span>
                        </a>
                        <a class="nav-link text-white" href="/Home/Index">
                            <i class="bi bi-arrow-bar-right"></i><span class="d-none d-sm-inline">Regresar al Home</span>
                        </a>
                    </div>

                </div>
            </div>

            <!--Cambios fuera del navbar Admin-->
            <div class="col-10 col-sm-9 col-xl-10 p-0 m-0">
                <header>
                    <h1 class="text-center mb-3">Atención de Contactos</h1>
                </header>
                
                <!--Botón de escribir-->
                <div class="boton-flotante">
                    <i class="bi bi-plus-circle-fill"></i>
                </div>
                <!--Botón de escribir-->
                <div class="container mt-4">
                    <div class="row row-cols-1 row-cols-md-3 g-5 p-0 m-0">
                        <!-- Eliminar todas las Tarjeta más adelante -->
                        <!-- Tarjeta -->
                        <div class="col">
                            <div class="card h-100 tarjeta">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom border-black">UN NUEVO MENSAJE DE:</h5>
                                    <p class="card-text">Correo electrónico</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <i class="bi bi-eye-slash text-secondary fs-5 icono-ojo"></i>
                                        <a href="#" class="btn btn-primary btn-detalles">Detalles</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card h-100 tarjeta">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom border-black">UN NUEVO MENSAJE DE:</h5>
                                    <p class="card-text">Correo electrónico</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <i class="bi bi-eye-slash text-secondary fs-5 icono-ojo"></i>
                                        <a href="#" class="btn btn-primary btn-detalles">Detalles</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Tarjeta -->
                        <div class="col">
                            <div class="card h-100 tarjeta">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom border-black">UN NUEVO MENSAJE DE:</h5>
                                    <p class="card-text">Correo electrónico</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <i class="bi bi-eye-slash text-secondary fs-5 icono-ojo"></i>
                                        <a href="#" class="btn btn-primary btn-detalles">Detalles</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Cambios fuera del navbar Admin-->
        </div>
    </div>


    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!--Cambio de no visto a visto-->
    <script>
        document.querySelectorAll('.btn-detalles').forEach(boton => {
            boton.addEventListener('click', function(event) {
                event.preventDefault();

                let icono = this.closest('.card-body').querySelector('.icono-ojo');

                if (icono.classList.contains('bi-eye-slash')) {
                    icono.classList.remove('bi-eye-slash', 'text-secondary');
                    icono.classList.add('bi-eye', 'text-primary');
                }
            });
        });
    </script>

  </body>
</html>