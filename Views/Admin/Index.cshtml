@{
    Layout = null;
    ViewData["Title"] = "Admin";
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    </head>
  <body>

    <div class="container-fluid">
        <div class="row " style="height: 100vh;">
            <div class="col-2 col-sm-3 col-xl-2 bg-dark custom-navbar">
                <div class="container">
                    <nav class="navbar border-bottom border-white mb-3" style="background-color: transparent !important;"data-bs-theme="dark">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="/Home/Index">
                                <i class="bi bi-house-door"></i><span class="d-none d-sm-inline ms-2">SweetNela</span>
                            </a>
                        </div>
                    </nav>
                    
                    <nav class="nav flex-column">
                        <a class="nav-link text-white" style="white-space:nowrap" href="/Admin/Index">
                            <i class="bi bi-inbox"></i><span class="d-none d-sm-inline ms-2">Atención de Orden</span>
                        </a>
                        <a class="nav-link text-white" style="white-space:nowrap" href="/Admin/AtenciónContactos">
                            <i class="bi bi-person-lines-fill"></i><span class="d-none d-sm-inline ms-2">Atención de Contactos</span>
                        </a>
                        <a class="nav-link text-white border-white" style="white-space:nowrap" href="#">
                            <i class="bi bi-person-square"></i><span class="d-none d-sm-inline ms-2">Nombre del Admin</span>
                        </a>
                        <a class="nav-link text-white" style="white-space:nowrap" href="#" onclick="confirmLogout(event)">
                            <i class="bi bi-arrow-bar-right me-2"></i><span class="d-none d-sm-inline ms-2">Log out</span>
                        </a>
                    </nav>
                </div>
            </div>


            <div class="col-10 col-sm-9 col-xl-10 p-0 m-0">
                <!--Cambios fuera del navbar Admin-->
                <div>
                    <header>
                        <h1 style="text-align:center">Atención de Orden</h1>
                    </header>
                </div>
                <!--Cambios fuera del navbar Admin-->
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        function confirmLogout(event) {
            event.preventDefault();
            const userConfirmed = confirm("¿Estas seguro(a) que quieres cerrar sesión de Administrador?");
            if (userConfirmed) {
                window.location.href = "/Home/Index";
            }
        }
    </script>
  </body>
</html>