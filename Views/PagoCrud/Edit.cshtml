@model SweetNela.Models.Pago

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Pago";
}

<h1 class="mb-4" style="color:#6c143c;">Editar Pago</h1>

<div class="bg-white p-4 rounded shadow-sm">
    <h4 style="color:#6c143c;">Detalles del Pago</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="MontoTotal" class="form-label" style="color:#6c143c;"></label>
                    <input asp-for="MontoTotal" class="form-control" />
                    <span asp-validation-for="MontoTotal" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PaymentDate" class="form-label" style="color:#6c143c;"></label>
                    <input asp-for="PaymentDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label" style="color:#6c143c;"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserId" class="form-label" style="color:#6c143c;"></label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="OrderId" class="form-label" style="color:#6c143c;"></label>
                    <select asp-for="OrderId" class="form-select" asp-items="ViewBag.OrderId"></select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PayPalPaymentId" class="form-label" style="color:#6c143c;"></label>
                    <input asp-for="PayPalPaymentId" class="form-control" />
                    <span asp-validation-for="PayPalPaymentId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PayPalPayerId" class="form-label" style="color:#6c143c;"></label>
                    <input asp-for="PayPalPayerId" class="form-control" />
                    <span asp-validation-for="PayPalPayerId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" style="background-color:#6c143c; border:none;" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
