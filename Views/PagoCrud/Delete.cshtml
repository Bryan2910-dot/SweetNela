@model SweetNela.Models.Pago

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Eliminar Pago";
}

<h1 class="mb-4" style="color:#6c143c;">Eliminar Pago</h1>

<h3 class="mb-4" style="color:#6c143c;">¿Estás seguro que deseas eliminar este registro?</h3>

<div class="bg-white p-4 rounded shadow-sm">
    <h4 style="color:#6c143c;">Detalles del Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.MontoTotal)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MontoTotal)
        </dd>

        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.PaymentDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PaymentDate)
        </dd>

        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.User.Id)
        </dd>

        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>

        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.PayPalPaymentId)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PayPalPaymentId)
        </dd>

        <dt class="col-sm-3 fw-semibold" style="color:#6c143c;">
            @Html.DisplayNameFor(model => model.PayPalPayerId)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PayPalPayerId)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
