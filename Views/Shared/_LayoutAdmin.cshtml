<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweetnela Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sweetnela.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <div class="sidebar">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
        <i class="fas fa-home"></i> <span>SweetNela</span>
    </a>
    <a asp-controller="Admin" asp-action="Index"><i class="fas fa-gauge"></i> <span>Inicio</span></a>
    <a asp-controller="Contacto" asp-action="Index"><i class="fas fa-envelope"></i> <span>Contactos</span></a>
    <a asp-controller="PedidoMejora" asp-action="Index"><i class="fas fa-tools"></i> <span>Pedidos</span></a>
    <a asp-controller="Usuarios" asp-action="Index"><i class="fas fa-users"></i> <span>Usuarios</span></a>
    <a class="logout-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-sign-out-alt"></i> <span>Regresar</span></a>
</div>


    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

