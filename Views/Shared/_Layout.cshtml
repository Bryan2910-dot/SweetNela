<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweetnela</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sweetnela.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light  box-shadow mb-3" style="background-color: #201B1B !important;">
            <div class="container" >
                <a class="navbar-brand nav-text" asp-area="" asp-controller="Home" asp-action="Index">Sweetnela</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-text" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-text" asp-area="" asp-controller="Contacto" asp-action="Create">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-text" asp-area="" asp-controller="PedidoMejora" asp-action="Index">Pedido</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-text" asp-area="" asp-controller="Recomendaciones" asp-action="Index">Recomendaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-text" asp-area="" asp-controller="Catalogo" asp-action="Index">Catalogo</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="footer mt-auto py-4">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                <span class="text-white">&copy; 2025 - SweetNela</span>
            </div>
            <div class="col-md-4 text-center">
                <ul class="list-unstyled d-inline-flex mb-0">
                    <li class="me-4"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">Privacidad</a></li>
                    <li><a href="#" class="footer-link">Términos de Servicio</a></li>
                </ul>
            </div>
            <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
                <a href="#" class="social-icon me-3"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-icon me-3"><i class="fab fa-instagram"></i></a>
                <a href="#" class="social-icon"><i class="fab fa-whatsapp"></i></a>
            </div>
        </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
