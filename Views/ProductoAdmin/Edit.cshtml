@model SweetNela.Models.Producto

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Producto";
    var colorPrincipal = "#6c143c";
}

<style>
    .btn-nela {
        background-color: @colorPrincipal;
        color: white;
        border: none;
    }

    .btn-nela:hover {
        background-color: #500f2e;
        color: white;
    }

    .form-section {
        background-color: #fff;
        padding: 2rem;
        border-radius: 0.75rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    label {
        font-weight: 600;
        color: #333;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 fw-bold" style="color: @colorPrincipal;">Editar Producto</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="form-section">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre del Producto</label>
                        <input asp-for="Name" class="form-control" placeholder="Ej. Torta de Chocolate" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Precio (S/)</label>
                        <input asp-for="Price" class="form-control" placeholder="Ej. 35.00" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Estado</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageURL" class="form-label">URL de Imagen</label>
                        <input asp-for="ImageURL" class="form-control" placeholder="https://..." />
                        <span asp-validation-for="ImageURL" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-nela">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
