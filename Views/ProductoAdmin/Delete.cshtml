@model SweetNela.Models.Producto

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Eliminar Producto";
    var colorPrincipal = "#6c143c";
}

<style>
    .delete-container {
        background: #fff5f5;
        padding: 2rem;
        border-radius: 1rem;
        border: 1px solid #f5c2c7;
    }

    .form-title {
        color: #dc3545;
        font-weight: 700;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-delete:hover {
        background-color: #b02a37;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .btn-cancel:hover {
        background-color: #565e64;
    }

    dt {
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="delete-container">
        <h2 class="form-title mb-3">¿Estás seguro que deseas eliminar este producto?</h2>

        <h5 class="text-secondary mb-4">Esta acción no se puede deshacer</h5>

        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-3">Imagen</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageURL" alt="Imagen del producto" class="img-thumbnail rounded" style="max-height: 250px;" />
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-delete">Sí, eliminar</button>
            <a asp-action="Index" class="btn btn-cancel">Cancelar</a>
        </form>
    </div>
</div>
