@model IEnumerable<SweetNela.Models.Producto>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Gesti√≥n de Productos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nueva Torta
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Status</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>S/@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <span class="badge @(item.Status == "Activo" ? "bg-success" : "bg-secondary")">
                        @item.Status
                    </span>
                </td>
                <td>
                    <img src="@item.ImageURL" alt="Imagen de @item.Name" class="img-thumbnail" style="max-height: 80px;" />
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

