@model SweetNela.Models.Producto

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Detalles del Producto";
    var colorPrincipal = "#6c143c";
}

<style>
    .card-nela {
        border: 1px solid #ddd;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        background-color: #fff;
    }

    .label {
        font-weight: 600;
        color: #444;
    }

    .value {
        color: #222;
    }

    .btn-nela {
        background-color: @colorPrincipal;
        color: white;
        border: none;
    }

    .btn-nela:hover {
        background-color: #500f2e;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 fw-bold" style="color: @colorPrincipal;">Detalles del Producto</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card-nela">
                <dl class="row">
                    <dt class="col-sm-4 label">Nombre:</dt>
                    <dd class="col-sm-8 value">@Model.Name</dd>

                    <dt class="col-sm-4 label">Precio:</dt>
                    <dd class="col-sm-8 value">S/ @Model.Price</dd>

                    <dt class="col-sm-4 label">Estado:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == "Activo" ? "bg-success" : "bg-secondary")">
                            @Model.Status
                        </span>
                    </dd>

                    <dt class="col-sm-4 label">Imagen URL:</dt>
                    <dd class="col-sm-8 value">@Model.ImageURL</dd>
                </dl>
            </div>
        </div>

        <div class="col-md-6 text-center">
            <div class="card-nela">
                <h5 class="mb-3">Vista previa</h5>
                <img src="@Model.ImageURL" alt="Imagen del producto @Model.Name"
                     class="img-fluid rounded shadow-sm"
                     style="max-height: 250px;" />
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-nela">Editar Producto</a>
    </div>
</div>
