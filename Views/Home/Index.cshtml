@{
    ViewData["Title"] = "Home Page";
}

<head>
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
  <body>
      <section class="hero-section">
        <div class="section-content">
          <div class="hero-details">
            <h2 class="title">Sweet Nela</h2>
            <h3 class="subtitle">Los mejores pasteles y cakes diseñados a tu gusto</h3>
            <p class="description">Especializados en resposteria y diseño</p>
            <div class="buttons">
              <a class="button order-now" asp-controller="Catalogo" asp-action="Index">Hacer Pedido</a>
              <a class="button contact-us" asp-controller="Contacto" asp-action="Create">Contactanos</a>
            </div>
          </div>
          <div class="hero-image-wrapper">
            <img src="~/imagenes/portada.png" asp-append-version="true" alt="Descripción" />
          </div>
        </div>
      </section>
      <!-- informacio -->
      <section class="about-section" id="about">
        <div class="section-content">
          <div class="about-image-wrapper">
            <img src="~/imagenes/A.png" asp-append-version="true" alt="Descripción" />
          </div>
          <div class="about-details">
            <h2 class="section-title" style="color: black;">Nosotros</h2>
            <p class="text">El objetivo de Sweet Nela al vender pasteles personalizados es brindar productos únicos y adaptados a los gustos de cada cliente. Buscamos hacer de cada celebración un momento especial con diseños exclusivos, sabores personalizados y decoraciones creativas, diferenciándonos en el mercado y fomentando la fidelización de nuestros clientes.</p>
            <div class="social-link-list">
              <a href="#" class="social-link"><i class="fa-brands fa-facebook"></i></a>
              <a href="#" class="social-link"><i class="fa-brands fa-instagram"></i></a>
              <a href="#" class="social-link"><i class="fa-brands fa-x-twitter"></i></a>
            </div>
          </div>
        </div>
      </section>
      <!-- menu seccion -->
