      <!-- contactar -->
     <section class="contact-section" id="contact">
      <h2 class="section-title text-center text-2xl font-bold text-gray-800 mb-6">Contáctanos</h2>
      <div class="section-content">
        <div class="contact-info-list">
          <ul>
            <li><i class="fa-solid fa-location-dot"></i> San Juan de Miraflores, Lima</li>
            <li><i class="fa-solid fa-envelope"></i> sweetnela@gmail.com</li>
            <li><i class="fa-solid fa-phone"></i> 926 635 137</li>
            <li><i class="fa-solid fa-clock"></i> Lunes a Viernes: 9:00 AM - 5:00 PM</li>
            <li><i class="fa-solid fa-clock"></i> Sábados: 10:00 AM - 3:00 PM</li>
            <li><i class="fa-solid fa-clock"></i> Domingos: Cerrado</li>
            <li><i class="fa-solid fa-globe"></i> www.sweetnela.com</li>
          </ul>
        </div>
        <form method="get" asp-controller="Contacto" asp-action="Create" class="contact-form">
          <input type="text" name="nombre" placeholder="Tu nombre" required />
          <input type="email" name="email" placeholder="Tu correo" required />
          <textarea name="mensaje" placeholder="Escribe tu mensaje" required></textarea>
          <button type="submit">Enviar mensaje</button>
        </form>
      </div>
    </section>


