@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Detalles del Usuario";
}

<style>
    .label-col {
        color: #6c143c;
        font-weight: 600;
    }
    .value-col {
        font-size: 1rem;
    }
    .actions a {
        color: #6c143c;
        font-weight: 600;
        text-decoration: none;
        margin-right: 15px;
    }
    .actions a:hover {
        text-decoration: underline;
    }
</style>

<h1 class="mb-4" style="color:#6c143c;">Detalles del Usuario</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 label-col">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-9 value-col">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt class="col-sm-3 label-col">
            @Html.DisplayNameFor(model => model.NormalizedUserName)
        </dt>
        <dd class="col-sm-9 value-col">
            @Html.DisplayFor(model => model.NormalizedUserName)
        </dd>

        <dt class="col-sm-3 label-col">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9 value-col">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-3 label-col">
            @Html.DisplayNameFor(model => model.PasswordHash)
        </dt>
        <dd class="col-sm-9 value-col">
            <small class="text-muted">(hash encriptado)</small>
        </dd>

        <dt class="col-sm-3 label-col">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-9 value-col">
            @(string.IsNullOrEmpty(Model.PhoneNumber) ? "â€”" : Model.PhoneNumber)
        </dd>

        <dt class="col-sm-3 label-col">
            Accesos fallidos
        </dt>
        <dd class="col-sm-9 value-col">
            @Html.DisplayFor(model => model.AccessFailedCount)
        </dd>
    </dl>
</div>

<div class="actions mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar a la lista de usuarios</a>
</div>
