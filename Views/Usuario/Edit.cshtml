@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Usuario";
}

<style>
    h1 {
        color: #6c143c;
        margin-bottom: 1.5rem;
    }
    label {
        color: #6c143c;
        font-weight: 600;
    }
    .btn-primary {
        background-color: #6c143c;
        border-color: #6c143c;
    }
    .btn-primary:hover {
        background-color: #4b0f29;
        border-color: #4b0f29;
    }
</style>

<h1>Editar Usuario</h1>

<hr />

<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Edit" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label">Contraseña (hash encriptado)</label>
                <input asp-for="PasswordHash" class="form-control" readonly />
                <small class="form-text text-muted">Para cambiar la contraseña, utiliza el módulo de gestión de contraseñas.</small>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="text-decoration-none" style="color:#6c143c;">&larr; Regresar a la lista de usuarios</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
